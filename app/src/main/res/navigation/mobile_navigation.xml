    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.dicoding.picodiploma.moviecatalogue.ui.movie.MovieFragment"
        android:label="@string/title_show"
        tools:layout="@layout/fragment_movie" />

    <fragment
        android:id="@+id/navigation_show"
        android:name="com.dicoding.picodiploma.moviecatalogue.ui.show.ShowFragment"
        android:label="@string/title_show"
        tools:layout="@layout/fragment_show" />

    <fragment
        android:id="@+id/navigation_bookmarked"
        android:name="com.dicoding.picodiploma.moviecatalogue.ui.favorite.FavoriteFragment"
        android:label="@string/title_bookmarked"
